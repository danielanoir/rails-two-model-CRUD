<h1>Editing offense</h1>

<%= form_for :offense, url: offense_path(@offense), method: :patch do |f| %>

  <% if @offense.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@offense.errors.count, "error") %>
    prohibited
        this offense from being saved:
      </h2>
      <ul>
        <% @offense.errors.full_message.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :crime %><br>
    <%= f.text_field :crime %>
  </p>

  <p>
    <%= f.label :picture %><br>
    <%= f.text_area :picture %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>

  <%= link_to 'Back', offenses_path %>
